<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimary"
    tools:context=".Admin.AdminHomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/admin_toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?colorPrimary"
            app:title="@string/app_name"
            app:titleTextColor="@color/white">

            <TextView
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:text="Logout"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textColor="@color/white"
            android:text="Students Requests"
            android:fontFamily="@font/arvo"
            android:layout_marginHorizontal="30dp"
            android:backgroundTint="?colorPrimaryVariant"
            android:layout_marginTop="20dp"
            android:id="@+id/btnStudentsRequests"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textColor="@color/white"
            android:text="Faculty"
            android:fontFamily="@font/arvo"
            android:layout_marginHorizontal="30dp"
            android:backgroundTint="?colorPrimaryVariant"
            android:layout_marginTop="20dp"
            android:id="@+id/btnFaculty"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textColor="@color/white"
            android:text="Major"
            android:fontFamily="@font/arvo"
            android:layout_marginHorizontal="30dp"
            android:backgroundTint="?colorPrimaryVariant"
            android:layout_marginTop="10dp"
            android:id="@+id/btnMajor"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textColor="@color/white"
            android:text="Courses"
            android:fontFamily="@font/arvo"
            android:layout_marginHorizontal="30dp"
            android:backgroundTint="?colorPrimaryVariant"
            android:layout_marginTop="10dp"
            android:id="@+id/btnCourses"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textColor="@color/white"
            android:text="Specialization"
            android:fontFamily="@font/arvo"
            android:layout_marginHorizontal="30dp"
            android:backgroundTint="?colorPrimaryVariant"
            android:layout_marginTop="10dp"
            android:id="@+id/btnSpecialization"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textColor="@color/white"
            android:text="Announcements"
            android:fontFamily="@font/arvo"
            android:layout_marginHorizontal="30dp"
            android:backgroundTint="?colorPrimaryVariant"
            android:layout_marginTop="10dp"
            android:id="@+id/btnAnnouncements"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textColor="@color/white"
            android:text="Students"
            android:fontFamily="@font/arvo"
            android:layout_marginHorizontal="30dp"
            android:backgroundTint="?colorPrimaryVariant"
            android:layout_marginTop="10dp"
            android:id="@+id/btnStudents"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>